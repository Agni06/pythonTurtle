from random import random
from turtle import Turtle, Screen
import random

tim = Turtle()
colours = ['red', 'green', 'blue','yellow','purple','orange','pink', 'black', 'brown', 'gold']
tim.shape('arrow')
tim.pensize(7)


def shape(side):
    angle = 360 / side
    for _ in range(0, side):
        tim.forward(100)
        tim.left(angle)


for _ in range(3, 11):
    tim.color(random.choice(colours))
    shape(_)
